# Kasa Smart Plug Monitor Configuration
# Copy this file to config.env and fill in your values
# Load with: source config.env

# Required: IP addresses of your smart plugs
# Run 'python monitor.py discover' to find these
export WASHER_IP=192.168.1.XXX
export DRYER_IP=192.168.1.XXX

# Required: Pushover Notification Service
# Get these from https://pushover.net after creating account:
# 1. USER KEY: Shown at top right of dashboard (looks like: uQiRzpo4DXghDmr9QzzfQu27cmVRsG)
# 2. API TOKEN: Create an application to get this (looks like: azGDORePK8gMaC0QOYAMyEEuzJnyUi)
export PUSHOVER_APP_TOKEN=your_api_token_here
export PUSHOVER_USER_KEY=your_user_key_here

# Alternative notification services (optional)
# Option 1: ntfy.sh (free, no signup)
# export NTFY_TOPIC=your-unique-topic-name

# Option 2: Telegram (free, requires bot setup)
# export TELEGRAM_BOT_TOKEN=your_bot_token_here
# export TELEGRAM_CHAT_ID=your_chat_id_here

# Optional: Washer thresholds (adjust based on your appliance)
export WASHER_POWER_START=5.0        # Watts to consider "started"
export WASHER_POWER_RUNNING=3.0      # Watts to consider still running
export WASHER_IDLE_TIME=120          # Seconds idle before considered "done"

# Optional: Dryer thresholds (adjust based on your appliance)
export DRYER_POWER_START=100.0       # Dryers typically use more power
export DRYER_POWER_RUNNING=50.0
export DRYER_IDLE_TIME=180           # Dryers often have cool-down periods

# Optional: Monitoring settings
export CHECK_INTERVAL=10             # Seconds between power checks
